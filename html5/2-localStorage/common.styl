$background_color = rgba(166, 162, 166, 0.5)
$box_shadow = 0 0 10px 10px rgba(206, 200, 200, 0.338)
$font_weight = 200
$font_color = rgba(0, 0, 0, 0.1)

html
 box-sizing border-box
 min-height 100vh
 display flex
 justify-content center
 align-items center
 text-align center


.wrapper
 padding 20px
 min-width 350px
 background $background_color
 box-shadow: $box_shadow
 h2
  text-align center
  margin 0
  font-weight 200

.plates
    margin 0
    padding 0
    text-align left
    list-style none
    li
        border-bottom: 1px solid rgba(0, 0, 0, 0.1)
        padding 10px 0
        display flex
    label
        flex 1
        cursor pointer
    input
        display none



.add-items
    margin-top 10px
    input
        padding: 10px
        outline: 0
        border: 1px solid 